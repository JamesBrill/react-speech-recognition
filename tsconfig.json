{
  "compilerOptions": {
    "outDir": "lib",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "target": "es5",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
